project ProducerConsumerStack is

   for Main use ("ProducerConsumerStack.adb");
   for Exec_Dir use ".";
   for Object_Dir use "objs";
   for Source_Dirs use ("src/**");

   package Builder is
      for Default_Switches ("ada") use ("-gnatQ", "-g"); -- "-g" important for Debugger
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use ("-gnat12", "-g", "-gnata", "-gnato"); -- "-O2" deleted
   end Compiler;

end ProducerConsumerStack;
